</style>
</head>
<body>
    <div> 
        
        <h1 class="head">Task Manager</h1>
        <p></p>
    </div>  
    <br>

    <div class="row">
        <div class="column">
          <div class="backlog">
            
            <h3>Backlog</h3>
           <h4><%=backlog %></h4>
          </div>
        </div>
      
        <div class="column">
          <div class="prog">
           

            <h3>In Progress</h3>
            <h4><%=progress %></h4>
          </div>
        </div>
        
        <div class="column">
          <div class="hold">
           
            <h3>ON Hold</h3>
            <h4><%=hold %></h4>
          </div>
        </div>
        
        <div class="column">
          <div class="done">
            <h3>Done</h3>
            <h4><%=done %></h4>
          </div>
        </div>
      </div>
<br>
<br>
    <div>
      
      <!-- Button trigger modal -->
      <a href="/todo" class="addtask">AddTask</a>


      <!-- Modal -->


    </div>
  <br>
<br>
<div class="container">
  <div class="row">
    <div class="col-8 card">
        <table class="table">
            <thead>
              <tr>
                <th>Task Id.</th>
                <th>AssignTo</th>
                <th>Task</th>
                <th>Status</th>
              </tr>
            </thead>
            <%listitem.forEach(function(dolist){%>
                <tr>
                    <td><%=dolist.taskid%></td>
                    <td><%=dolist.taskname%></td>
                    <td><%=dolist.assignto%></td>
                    <td><%=dolist.task_status%></td>
  
                    <td>
                        <a href="todo/edit/<%=dolist.taskid%>" class = "btn btn-sm btn-primary">Edit</a>
                        <a href="todo/delete/<%=dolist.taskid%>" class = "btn btn-sm btn-primary">delete</a>
                    </td>
  
                </tr>
                <%});%>
  
          </table>
        
    </div>
    <div class="col-4 card ">
        <div>
            <h3 class="barhead">Task Progress</h3>
        </div>
        <table class="tablebar">
          <tr>
              <th>Name of Employee</th>
              <th>progress</th>
             </tr>

             <tr>
                 <td>Hrishikesh</td>
                 <td>
                     <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </td>
             </tr>

             <tr>
                <td>Manish</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
               </td>
            </tr>

            <tr>
                <td>Darshan</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
               </td>
            </tr>

            <tr>
                <td>Ashutosh</td>
                <td>
                     
               <div class="progress">
                 <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
               </td>
            </tr>
          
        </table>

           
                 
    </div>


  </div>
</div>
 <div>

    <footer class="foot">
      
        <h3>Thank you</h3>
    </footer>
 </div>

  
   


